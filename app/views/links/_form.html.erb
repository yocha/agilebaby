<%= simple_form_for @link, :html=> { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %></legend>

    <%= f.input :url %>
    <%= f.input :title %>
    <%= f.input :confirmed %>
    <%= f.association :category %>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  </fieldset>
<% end %>
